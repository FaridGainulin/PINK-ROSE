.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding-top 10px
    +above($breakpoints.sm)
      padding-top 40px
      justify-content start
      gap: 170px
    +above($breakpoints.md)
      padding-top 60px
      gap: 280px
    +above($breakpoints.xxl)
      padding-top 82px
      gap: 350px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 20px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 31px

  &__logo
    width 90px
    height: auto
    +above($breakpoints.sm)
      width 95px
    +above($breakpoints.md)
      width 110px
    +above($breakpoints.xxl)
      width 115px

  &__brand
    display: none
    +above($breakpoints.sm)
      position relative
      z-index 1
      display: flex
      flex-direction: column
      &:after
        content: ""
        position: absolute
        z-index -1
        background-color #fff
        width 1px
        height: 32px;
        left: -16px;
        top: 7px;
        +above($breakpoints.md)
          height: 40px
          left: -18px
          top: 12px
        +above($breakpoints.xxl)
          height: 49px
          left: -22px
          top: 12px

  &__brand-mobile
    text-align: center
    padding 10px 0
    background-color #242323
    +above($breakpoints.sm)
      display: none
