  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #DC327B
  &:focus
    color: #fff
    caret-color: #DC327B
    border 1px solid #DC327B
    box-shadow: 3px 3px 10px 0px #DC327B
    background: transparent
    &::placeholder
      color: #fff
  &::placeholder
    color: #fff
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 55px
  +above($breakpoints.md)
    padding: 0 20px;
    font-size: 16px;
    height: 65px
  +above($breakpoints.xxl)
    padding: 0 25px;
    font-size: 18px;
    height: 70px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: transparent
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--white
    padding: 0 32px;
    font-family: 'Gilroy-Regular'
    background: #fff
    color: #141414
    &:hover
      border 1px solid #141414
    &:focus
      color: #141414
      border 1px solid #141414
      box-shadow: 3px 3px 10px 0px #141414
      background: #fff
      &::placeholder
        color: #141414
    &::placeholder
      color: #141414
    +above($breakpoints.sm)
      padding: 0 20px;
      height: 50px
    +above($breakpoints.md)
      padding: 0 25px;
      height: 55px
    +above($breakpoints.xxl)
      padding: 0 32px;
      height: 60px
    &.error
      background: #fff

  &--textarea
    outline none
    border: none
    padding: 10px 10px 10px 32px
    resize: none
    height: 60px
    width 100%
    border-radius: 13px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 20px
      height: 80px
    +above($breakpoints.md)
      padding: 17px 10px 10px 25px
      height: 100px;
    +above($breakpoints.xxl)
      padding: 23px 10px 10px 32px
      height: 120px

  &--secondary
    +above($breakpoints.sm)
      padding: 0 15px;
      height: 50px
    +above($breakpoints.md)
      padding: 0 16px;
      height: 55px
    +above($breakpoints.xxl)
      padding: 0 18px;
      height: 55px


