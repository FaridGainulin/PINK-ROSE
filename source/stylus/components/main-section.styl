.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-color #000
  +above($breakpoints.sm)
    background-position: center

  &__container
    position relative
    z-index 1
    padding 20px 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 82px 0

  &__title
    padding 15px 0 10px
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 40px 0 25px
    +above($breakpoints.xxl)
      padding 54px 0 33px

  &__bottom
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 15px
    margin-top 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 20px
      margin-top 20px
    +above($breakpoints.md)
      gap: 25px
      margin-top 25px
    +above($breakpoints.xxl)
      gap: 32px
      margin-top 30px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    padding 17px 14px
    border-radius: 8px
    background-color #242323
    +above($breakpoints.sm)
      gap: 5px
      flex-direction: row
      flex-wrap: wrap
      padding 15px
      width 280px
    +above($breakpoints.md)
      border-radius: 13px
      padding 20px
      width 360px
    +above($breakpoints.xxl)
      padding 24px 23px 23px
      width 382px
      height: 267px

  &__bottom-block
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: column
      justify-content start
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      margin-top -9px

  &__bottom-img
    width 70px
    height: auto
    +above($breakpoints.sm)
      width 110px
    +above($breakpoints.md)
      width 150px
    +above($breakpoints.xxl)
      width 178px

  &__img
    width: 300px;
    height: auto;
    margin: -20px 0 0 21px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 480px;
      bottom: 0;
      right: -134px;
    +above($breakpoints.md)
      width: 630px;
      right: -155px;
    +above($breakpoints.xxl)
      width 762px
      right: -130px
